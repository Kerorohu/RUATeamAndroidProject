<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="航点模式参数">


        <EditTextPreference
            android:defaultValue="10f"
            android:key="maxFlightSpeed"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="最大飞行速度" />
        <EditTextPreference
            android:defaultValue="5f"
            android:key="autoFlightSpeed"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="一般飞行速度" />
        <ListPreference
            android:defaultValue="1"
            android:entries="@array/waypoint_flight_path_values"
            android:entryValues="@array/waypoint_flight_path_values"
            android:key="hotpointPath"
            android:title="飞行路径方式" />
        <ListPreference
            android:defaultValue="1"
            android:entries="@array/waypoint_heading_mode"
            android:entryValues="@array/waypoint_heading_mode_values"
            android:key="waypointHeadingMode"
            android:title="云台朝向" />
        <EditTextPreference
            android:defaultValue="10"
            android:key="waypointStayTime"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="到达航点停留时间" />
    </PreferenceCategory>

    <PreferenceCategory app:title="热点模式参数">

        <EditTextPreference
            android:defaultValue="5"
            android:key="hotpoint_radius"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="围绕半径" />

        <EditTextPreference
            android:defaultValue="15"
            android:key="hotpoint_altitude"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="飞行高度" />
        <SwitchPreference
            android:defaultValue="true"
            android:key="clockwise"
            android:title="环绕方向顺时针" />
        <ListPreference
            android:defaultValue="3"
            android:entries="@array/hotpoint_heading"
            android:entryValues="@array/hotpoint_heading_values"
            android:key="hotpoint_heading"
            android:title="云台朝向" />


    </PreferenceCategory>

</PreferenceScreen>